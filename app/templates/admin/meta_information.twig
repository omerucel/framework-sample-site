{% extends "admin/layout/default.twig" %}

{% block title %}Meta Bilgileri{% endblock %}

{% block main_content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h3>Meta Bilgileri</h3>
                </div>
                <form method="POST" action="">
                    {% include 'admin/embed_message.twig' %}

                    <div class="form-group">
                        <label>Site AdÄ±</label>
                        <input type="text" name="site_name" tabindex="0" class="form-control" value="{{ settings.site_name.value }}" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label>Meta Title</label>
                        <input type="text" name="meta_title" tabindex="0" class="form-control" value="{{ settings.meta_title.value }}" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label>Meta Description</label>
                        <textarea class="form-control" name="meta_description" rows="5">{{ settings.meta_description.value }}</textarea>
                    </div>

                    <div class="form-group">
                        <label>Meta Keywords</label>
                        <textarea class="form-control" name="meta_keywords" rows="5">{{ settings.meta_keywords.value }}</textarea>
                    </div>

                    <div class="form-group">
                        <label>Google Analytics</label>
                        <textarea class="form-control" name="google_analytics" rows="5">{{ settings.google_analytics.value }}</textarea>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" tabindex="0">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}